<% if notice %>
<p class="alert alert-warning"><%= notice %></p>
<% end %>

<div class="container">
  <h1>Articles</h1>

  <% @articles.each do |article| %>
  <div class="row">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= article.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= article.tags %></h6>
        <p class="card-text"><%= article.body %></p>       
        <div class="btn-group"> 
          <%= link_to "Show this article", article, class: "btn btn-primary" %>
          <%= link_to "New article", new_article_path, class: "btn btn-info" %>
        </div>
      </div>
    </div>
  </div>&nbsp;
  <% end %>
</div>

