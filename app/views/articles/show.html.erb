<% if notice %>
<p class="alert alert-warning"><%= notice %></p>
<% end %>

<div class="container">
  <div class="row">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= @article.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= @article.tags %></h6>
        <p class="card-text"><%= @article.body %></p>
        <div class="btn-group" role="group" >
          <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-success" %>
          <%= link_to "Destroy this article", @article, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
